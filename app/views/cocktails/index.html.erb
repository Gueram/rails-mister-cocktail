<h1>All my cocktails</h1>

<p><%= link_to "Add a new cocktail", new_cocktail_path %></p>

<% @cocktails.each do |cocktail| %>
  <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
  <% if cocktail.photo.attached? %>
  <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
<% end %>
